#!/bin/bash

while true
do
  $(dirname $0)/usiToCsa.rb --host 160.16.80.27 --floodgate --ponder --keep-alive=60 --hash=4096 --options 'USI_Ponder=true,PV_Interval=500,MaxMovesToDraw=512,UCT_NodeLimit=50000000,UCT_Threads1=3,UCT_Threads2=3,UCT_Threads3=3,UCT_Threads4=3,UCT_Threads5=3,UCT_Threads6=3,UCT_Threads7=3,UCT_Threads8=3,DNN_Batch_Size1=256,MateSearchPly=5' /workspace/deep_avx2

  if [ $? -ne 0 ] ; then
    logger -s "$ID: Sleeping..."
    sleep 900
  fi
done
